<?xml version="1.0"?>
<layout version="0.1.0">
    <default>
        <reference name="head">
            <action method="addItem">
                <type>skin_js</type>
                <name>js/jquery.flexslider-min.js</name>
            </action>
            <action method="addItem">
                <type>skin_js</type>
                <name>js/oneshop.js</name>
            </action>
            <action method="addItem">
                <type>skin_css</type>
                <name>css/flexslider.css</name>
            </action>
        </reference>
        <reference name="right">
            <remove name="top.search"/> 
       </reference>
       <reference name="left">
            <remove name="left.newsletter"/>
            <remove name="left.permanent.callout"/>
            <remove name="catalogsearch.leftnav"/>
        </reference>
        <reference name="right">
            <remove name="right.permanent.callout"/>
            <remove name="paypal.partner.right.logo"/>
            <remove name="right.poll"/>
            <remove name="catalog.compare.sidebar"/>
            <remove name="cart_sidebar"/>
        </reference>
        <reference name="root">
            <action method="setTemplate"><template>page/1column.phtml</template></action>
        </reference>
        <reference name="footer">
             <remove name="store_switcher"/>
             <remove name="footer_links"/>
        </reference>
        <reference name="top.links">
            <remove name="wishlist_link"/>
            <action method="addLink">
                <label>Perks</label>
                <url>/perks</url>
            </action>
            <action method="removeLinkByUrl">
                <url helper="customer/getAccountUrl"/>
            </action> 
             <action method="removeLinkByUrl">
                <url helper="customer/getWishlistUrl"/>
            </action> 
            <remove name="checkout_cart_link"/>       
            <block type="checkout/links" name="checkout_cart_link_custom">
                <action method="addCartLink"><prepare/><position>100</position></action>
            </block>
        </reference>
    </default>      
    <catalog_category_default>
       <reference name="root">
            <remove name="breadcrumbs"/>
        </reference>
        <reference name="product_list">
            <action method="setColumnCount"><columns>4</columns></action>
        </reference>
    </catalog_category_default>
    <customer_logged_in>
        <reference name="top.links">
            <action method="removeLinkByUrl"><url helper="customer/getLogoutUrl"/></action> 
            <action method="addLink" translate="label title" module="customer">
                <label>My Account</label>
                <url helper="customer/getAccountUrl"/>
                <title>My Account</title>
            </action>
        </reference>
    </customer_logged_in>
    <customer_logged_out>
        <reference name="top.links">
            <action method="removeLinkByUrl"><url helper="customer/getRegisterUrl"/></action> 
            <action method="removeLinkByUrl"><url helper="customer/getLoginUrl"/></action> 
            <action method="removeLinkByUrl"><url helper="customer/getLogoutUrl"/></action> 
            <action method="addLink" translate="label title" module="customer">
                <label>Log In / Sign Up</label>
                <url helper="customer/getLoginUrl"/>
                <title>Log In/Sign Up</title>
                <prepare/>
                <urlParams/>
                <position>40</position>
            </action>
        </reference>
    </customer_logged_out>
     <checkout_cart_index>
        <reference name="content">
            <remove name="checkout.cart.methods.multishipping"/>
        </reference>
    </checkout_cart_index>
    <checkout_onepage_index>
        <reference name="right">
            <remove name="checkout.progress.wrapper"/>
        </reference>
    </checkout_onepage_index>
    <catalog_product_view>
        <reference name="root">
            <action method="setTemplate"><template>page/1column.phtml</template></action>
        </reference>
        <reference name="product.info.additional">
            <remove name="product_tag_list"/>
        </reference>
    </catalog_product_view>
</layout>